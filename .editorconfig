# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
# Unix-style newlines with a newline ending every file
end_of_line = lf
# Set default charset
charset = utf-8
indent_style = space

[Makefile]
indent_style = tab

[*.js]
# Tab indentation
indent_size = 2

[*.scss]
# Tab indentation
indent_size = 2

[*.py]
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true
